<h1>Search for a Room according to Room Num/ Library / Size</h1>

<!%= render 'form' %>
<%= form_for (@booking_history),:url=> url_for(:controller => 'booking_histories',:action =>'search') do |f| %>
    <div class="field">
      <%= f.label :room_num %><br>
      <%= f.number_field :room_num %>
    </div><br>
    <div class="field">
      <%= f.label :building %><br>
      <%= f.select :building, options_for_select([["Select One", ""], "DH Hill", "Hunt"])%>
    </div><br>
    <div class="field">
      <%= f.label :size %><br>
      <%= f.select :size, options_for_select([["Select One", ""], "2", "4","6"])%>
    </div><br>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.date_select :date %>
    </div><br>
    <div class="actions">
      <%= f.submit "Search" %>
    </div><br>


<% end %>


<%= link_to 'Back', booking_histories_path %>
