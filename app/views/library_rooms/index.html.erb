<p id="notice"><%= notice %></p>

<h1>Listing Library Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Building</th>
      <th>Booked</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @library_rooms.each do |library_room| %>
      <tr>
        <td><%= library_room.number %></td>
        <td><%= library_room.building %></td>
        <td><%= library_room.booked %></td>
        <td><%= library_room.size %></td>
        <td><%= link_to 'Show', library_room %></td>
        <td><%= link_to 'Edit', edit_library_room_path(library_room) %></td>
        <td><%= link_to 'Destroy', library_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

